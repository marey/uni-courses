.personal-box{
  background-color: #4F5766;
  height:500rpx;
}
.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-left:295rpx;
  border-radius: 50%;
}
.user-name{
  color:#fff;
  font-size:36rpx;
  text-align: center;
  margin-top:30rpx;
}
.statistics-box{
  width:655rpx;
  height:200rpx;
  position: absolute;
  margin-top:-100rpx;
  padding-left:55rpx;
}
.statistics-item{
  display: inline-block;
  width:300rpx;
  text-align: center;
}
.statistics-box .value{
  font-size:36rpx;
  margin-top:40rpx;
  line-height: 60rpx;
  font-weight: bold;
}
.statistics-box .title{
  font-size:28rpx;
  line-height: 50rpx;
}

.store-box{
  line-height:80rpx;
  padding-left:30rpx;
  font-size:30rpx;
  margin-top:130rpx;
  font-weight: bold;
}
.ours-box{
  padding-left:30rpx;
  font-size:30rpx;
  line-height:80rpx;
  margin-top:20rpx;
  font-weight: bold;
}
.ours-box::after,.store-box::after{
  content:'';
  height:30rpx;
  width:19rpx;
  float:right;
  margin-top:25rpx;
  margin-right:30rpx;
  background-size: 100% 100%;
  background-image: url(data:image/png;base64,);
}